@model Dominio.Publicaciones
@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Detalle Publicación</h3>

            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Publicaciones</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Detalle Publicación</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <hr />
    <section class="section">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <div class="form-group">
                        <label>Código: </label>
                        @Model.IdPublicacion
                    </div>
                    <div class="form-group">
                        <label>Nombre: </label>
                        @Model.NombrePublicacion
                    </div>
                    <div class="form-group">
                        <label>Descripción: </label>
                        @Model.DescripcionPublicacion
                    </div>
                    <div class="form-group">
                        <label>Imagen: </label>
                        @Model.ImgPublicacion
                    </div>
                    <div class="form-group">
                        <label>Visible: </label>
                        @Model.Visible

                    </div>

                </div>
                <a href="@Url.Action("Index","Publicaciones")" class="btn btn-secondary me-1 mb-1 mt-2">Regresar</a>
            </div>

        </div>
    </section>

</div>
