@model List<Dominio.Usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";

}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Gestión de Usuarios</h3>
                
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Gestión de Usuarios</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <hr />
    <section class="section mt-3">
        <div class="card">
            <div class="card-header">
                <a href="@Url.Action("Nuevo","Usuarios")" class="btn btn-primary">Nuevo</a>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Rol</th>
                            <th>Cedula</th>
                            <th>NumCelular</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@(String.Format("{0} {1} {2} {3}", item.PrimerNombre, item.SegundoNombre, item.PrimerApellido, item.SegundoApellido))</td>
                            <td>@Html.DisplayFor(modelItem => item.IdRol)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                            <td>@Html.DisplayFor(modelItem => item.NumCelular)</td>
                            <td>
                                <a href="@Url.Action("Actualizar","Usuarios", new { id = item.IdUsuario })" class="btn btn-success" title="Actualizar"><i class="bi bi-pen"></i></a>
                                <a href="@Url.Action("Eliminar","Usuarios", new { id = item.IdUsuario })" class="btn btn-danger" title="Eliminar"><i class="bi bi-trash2-fill"></i></a>
                                <a href="@Url.Action("Detalle","Usuarios", new { id = item.IdUsuario })" class="btn btn-secondary" title="Detalle"><i class="bi bi-eye-fill"></i></a>
                            </td>
                        </tr>
                        }

                        </tbody>
                </table>
            </div>
        </div>

    </section>
</div>




<script>
    // Simple Datatable
    let table1 = document.querySelector('#table1');
    let dataTable = new simpleDatatables.DataTable(table1);
</script>
