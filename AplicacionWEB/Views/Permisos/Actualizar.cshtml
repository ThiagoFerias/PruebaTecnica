@model Dominio.Permisos
@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.Title = "Actualizar";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Actualizar Permiso</h3>

            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Gestión de Usuarios</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Permisos</li>
                        <li class="breadcrumb-item active" aria-current="page">Actualizar Permiso</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <hr />

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-6 ">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <form method="post" action="@Url.Action("Actualizar", "Permisos")">
                                @Html.TextBoxFor(X => X.IdPermiso, new { @class = "form-control", @readonly = "readonly", @hidden = "true" })
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Vista</label>
                                            @Html.TextBoxFor(X => X.Vista, new { @class = "form-control", @placeholder = "Nombre de la vista " })
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Repositorio</label>
                                            @Html.TextBoxFor(X => X.Ubicacion, new { @class = "form-control", @placeholder = "Nombre del repositorio " })
                                        </div>
                                    </div>

                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Actualizar</button>
                                        <a href="@Url.Action("Index","Permisos")" class="btn btn-secondary me-1 mb-1">Regresar</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}